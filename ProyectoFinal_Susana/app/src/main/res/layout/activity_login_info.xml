<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="¿Que es la
App?   "
        android:id="@+id/textView13"
        android:textSize="40dp"
        android:layout_gravity="center_horizontal"
        android:layout_alignTop="@+id/imageView"
        android:layout_toEndOf="@+id/imageView"
        android:layout_marginStart="36dp" />

    <ImageView
        android:layout_width="78dp"
        android:layout_height="78dp"
        android:src="@drawable/ic_launcher"
        android:id="@+id/imageView"
        android:layout_margin="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="La aplicación es una herramienta para poder seleccionar un tratamiento especifico y poder disponer de él en cualquiera de nuestros establecimientos."
        android:textColor="@color/grey"
        android:textAlignment="center"
        android:id="@+id/textView14"
        android:layout_below="@+id/imageView"
        android:layout_alignStart="@+id/imageView"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="20dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Entendido"
        android:id="@+id/volver"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="78dp" />
</RelativeLayout>