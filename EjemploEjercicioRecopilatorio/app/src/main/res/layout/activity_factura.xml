<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:baselineAligned="false"
    android:paddingBottom="5dp"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    android:paddingTop="5dp">

    <TextView
        android:layout_height="wrap_content"
        android:id="@+id/zona"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="50dp"
        android:textSize="18sp"
        android:textColor="@android:color/black"
        android:textAlignment="textEnd"
        android:layout_width="320dp"
        android:layout_toEndOf="@+id/apeso" />

    <TextView
        android:text="FACTURA"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/titulo"
        android:textStyle="normal|bold"
        android:textAlignment="center"
        android:textSize="30sp"
        android:textColor="@android:color/black"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Modelo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/azona"
        android:textStyle="normal|bold"
        android:textAlignment="textStart"
        android:textSize="18sp"
        android:textColor="@android:color/black"
        android:layout_alignTop="@+id/zona"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/zona" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/aprecio"
        android:id="@+id/preciozona"
        android:textSize="18sp"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/aprecio"
        android:textAlignment="textEnd"
        android:textColor="@android:color/black" />

    <TextView
        android:text="Tarifa: "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/aprecio"
        android:layout_alignStart="@+id/azona"
        android:layout_marginTop="17dp"
        android:id="@+id/atarifa"
        android:textStyle="normal|bold"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="18sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/atarifa"
        android:id="@+id/tarifa"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/atarifa"
        android:textSize="18sp"
        android:textAlignment="textEnd"
        android:textColor="@android:color/black" />

    <TextView
        android:text="Complementos: "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/atarifa"
        android:layout_marginTop="19dp"
        android:id="@+id/acomplemento"
        android:textStyle="normal|bold"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        android:layout_alignStart="@+id/atarifa" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/complemento1"
        android:textSize="18sp"
        android:textColor="@android:color/black"
        android:textAlignment="textEnd"
        android:layout_below="@+id/acomplemento"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/complemento1"
        android:layout_alignStart="@+id/acomplemento"
        android:id="@+id/complemento2"
        android:layout_toStartOf="@+id/tarifa"
        android:layout_alignParentEnd="true"
        android:textAlignment="textEnd"
        android:textSize="18sp"
        android:textColor="@android:color/black" />

    <TextView
        android:text="Tiempo:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/apeso"
        android:textStyle="normal|bold"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        android:layout_below="@+id/complemento2"
        android:layout_alignParentStart="true"
        android:layout_marginTop="43dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/apeso"
        android:id="@+id/peso"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/apeso"
        android:textSize="18sp"
        android:textColor="@android:color/black"
        android:textAlignment="textEnd" />

    <TextView
        android:text="Precio: "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:id="@+id/oprecio"
        android:layout_below="@+id/apeso"
        android:layout_alignStart="@+id/aprecio"
        android:textStyle="normal|bold"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="18sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/oprecio"
        android:id="@+id/preciopeso"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/oprecio"
        android:textSize="18sp"
        android:textColor="@android:color/black"
        android:textAlignment="textEnd" />

    <TextView
        android:text="Total: "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/preciopeso"
        android:layout_toEndOf="@+id/apeso"
        android:layout_marginTop="64dp"
        android:id="@+id/atotal"
        android:textStyle="normal|bold"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="24sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/atotal"
        android:id="@+id/total"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/atotal"
        android:textAlignment="textEnd"
        android:textStyle="normal|bold"
        android:textColor="@android:color/black"
        android:textSize="24sp" />

    <Button
        android:text="Recalcular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:id="@+id/recalcular"
        android:layout_alignStart="@+id/complemento2"
        android:layout_toStartOf="@+id/atotal"
        android:textSize="18sp"
        android:textColor="@android:color/black"
        android:stateListAnimator="?attr/actionModeCloseDrawable"
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/coche"
        android:layout_below="@+id/titulo"
        android:layout_alignParentStart="true"
        android:id="@+id/imagen"
        android:layout_alignBottom="@+id/azona"
        android:layout_alignEnd="@+id/acomplemento" />

    <TextView
        android:text="Precio por hora: "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="19dp"
        android:id="@+id/aprecio"
        android:textStyle="normal|bold"
        android:textAlignment="center"
        android:textSize="18sp"
        android:textColor="@android:color/black"
        android:layout_below="@+id/azona"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/complemento2"
        android:layout_toStartOf="@+id/preciopeso"
        android:id="@+id/complemento3"
        android:layout_alignParentEnd="true" />

</RelativeLayout>