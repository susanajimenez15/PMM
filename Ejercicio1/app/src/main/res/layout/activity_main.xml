<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.mati.ejercicio1.MainActivity">

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Red"
        android:id="@+id/rbRed"
        android:checked="true"
        android:layout_alignTop="@+id/rbBlue"
        android:layout_toLeftOf="@+id/rbWhite"
        android:layout_toStartOf="@+id/rbWhite" />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="White"
        android:id="@+id/rbWhite"
        android:layout_alignTop="@+id/rbRed"
        android:layout_centerHorizontal="true"
        android:checked="false"
        android:layout_above="@+id/btnSet" />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Blue"
        android:id="@+id/rbBlue"
        android:checked="false"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/btnCancel"
        android:layout_alignStart="@+id/btnCancel" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Set Color"
        android:id="@+id/btnSet"
        android:layout_marginTop="79dp"
        android:layout_below="@+id/rbRed"
        android:layout_alignLeft="@+id/rbRed"
        android:layout_alignStart="@+id/rbRed" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cancel"
        android:id="@+id/btnCancel"
        android:layout_alignBottom="@+id/btnSet"
        android:layout_toRightOf="@+id/rbWhite"
        android:layout_toEndOf="@+id/rbWhite" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/textView"
        android:layout_below="@+id/btnSet"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
</RelativeLayout>
